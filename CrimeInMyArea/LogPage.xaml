<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrimeInMyArea.LogPage"
             Title="Application Logs">
    <Grid RowDefinitions="*, Auto" Padding="10">
        <ScrollView Grid.Row="0" x:Name="LogScrollViewLocal">
            <CollectionView x:Name="LogCollectionViewLocal" Margin="5">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="5" Margin="0,0,0,5" BorderColor="LightGray" CornerRadius="5" BackgroundColor="WhiteSmoke">
                            <Label Text="{Binding .}" FontSize="12" LineBreakMode="WordWrap"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <Button Grid.Row="1"
                Text="Clear Logs"
                Clicked="OnClearLogsClicked"
                HorizontalOptions="FillAndExpand"
                Margin="0,10,0,0"
                CornerRadius="8"/>
    </Grid>
</ContentPage>